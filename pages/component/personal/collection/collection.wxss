@import "../../../template/load/load.wxss";

page{
    height: 100%;
    width: 100%;
}

.no_collection {
    margin-top: 40%;
    text-align: center;
}

.no_collection image{
    width: 80px;
    height: 80px;
}

.no_collection text{
    color: #8a8a8a;
    font-size: 16px;
    padding-bottom: 10px;
}

.no_collection_btn{
    width: 35%;
    color: #ffffff;
    background-color: #707070;
    border-radius: 12px;
    border-top: white solid 5px;
}

/** top bar */
.collection_top{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #eeeeee;
    border-bottom: 1px solid #dddddd;
    height: 20%;
    width: 100%;
}

.bottom_border{
    border-bottom: black solid 3px;
}

/** list */
.comm_list{
    height: 150px;
    width: 100%;
    margin-left: 2%;
    margin-right: 1%;
    margin-top: 2%;
}

.comm_list_b{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding-bottom: 1%;
    border-bottom: solid #dddddd 1px;
}

.comm_list_b image{
    padding-left: 2%;
    padding-right: 2%;
    width: 40%;
    height: 100%;
}

.right_list{
    height: 100%;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /*align-items: flex-start;*/
}

.right_list text{
    text-align: left;
}

.right_top{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}


.shop_level{
    display: flex;
    flex-direction: row;
}

.shop_level image{
    height: 30rpx;
    width: 30rpx;
}

.introduction{
    color: #707070;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.name{
    width: 60%;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
