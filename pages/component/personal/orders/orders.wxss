 /* pages/orders/orders.wxss */
@import "../../../template/load/load.wxss";
page{
    width: 100%;
    height: 100%;
    background-color: #dddddd;
}

.loadingShow{
    height: 100px;
    padding-top: 45%
}

 /** top bar */
 .collection_top{
     text-align: center;
     display: flex;
     flex-direction: row;
     justify-content: space-around;
     background-color: #eeeeee;
     border-bottom: 1px solid #dddddd;
     height: 20%;
     width: 100%;
 }

 .bottom_border{
     border-bottom: black solid 3px;
 }

.order{
    margin-top: 1%;
    margin-bottom: 2%;
    border-radius: 5px;
    border: #dddddd solid 1px;
    background-color: #ffffff;
}

.commlist{
    margin-left: 5%;
    padding-top: 3%;
    padding-bottom: 2%;
    display: flex;
    flex-direction: row;
    position: relative;
    max-height: 200rpx;
    border-top: dotted  #dddddd 1px;
}

 .commodity_icon image{
     float: left;
     height: 150rpx;
     width: 150rpx;
 }


 .commlist .commodity_info{
     position: absolute;
     display: flex;
     flex-direction: column;
     left: 28%;
     font-size: 80%;
     width: 60%;
 }

 .commodity_info text{
     -webkit-line-clamp: 2;
     overflow: hidden;
     text-overflow: ellipsis;
     white-space: wrap;
     course:hand;
     width:180px;
 }

 .commlist .commodity_price_count{
     position: absolute;
     display: flex;
     flex-direction: column;
     right: 5%;
     text-align: right;
     padding-right: 2%;
     font-size: 70%;
 }

 .commodities_price{
     width: 100%;
     height: auto;
     padding-left: 5%;
 }

 .commodities_price_text{
     text-align: right;
     padding-right: 10%;
     padding-top: 2%;
     padding-bottom: 2%;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     font-size: 70%;
 }

 .name{
     width: 50%;
     display: block;
     overflow: hidden;
     white-space: nowrap;
     text-overflow: ellipsis;
 }

 .time{
     padding-left: 5%;
     border-top: #dddddd dotted 1px;
     padding-bottom: 1%;
     font-size: 70%;
     color: #999999
 }

 .orderId{
     font-size: 80%;
     margin-top: 1%;
     margin-left: 5%;
     margin-right: 5%;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
 }

 /** 已购订单ext */
 .extensionData{
     font-size: 70%;
     margin-left: 5%;
     margin-top: 10%;
     margin-bottom: 5%;
     border-top: #dddddd dotted 1px;
 }

 /** 未付款订单ext */
 .extensionWidget{
     margin-top: 10%;
     display: flex;
     flex-direction: row;
     justify-content: flex-end;
 }

 .addressinfo_top{
     padding-right: 5%;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
 }

 .addressinfo_down{
     width: 70%;
 }

 .price{
     margin-top: 3%;
     margin-right: 5%;
 }

 .fee{
     display: flex;
     flex-direction: row;
     justify-content: space-between;
 }

 .evalue{
     position: absolute;
     bottom: 2%;
     right: 5%;
     font-size: 70%;
     border-radius: 2px;
     border: #8C8C8C 1px solid;
 }

 .cancelOrder{
     width: 25%;
     text-align: right;
     padding-right: 5%;
     font-size: 80%;
     color: #707070;
 }
