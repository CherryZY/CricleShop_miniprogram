@import "../../../template/load/load.wxss";

page {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #dddddd;
}
/* 直接设置swiper属性 */
swiper {
    /*height: 500rpx;*/
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.detail {
    background-color: white;
    display: flex;
    flex-direction: column;
}

.detail .title {
    font-size: 100%;
    color: black;
    text-align: left;
    padding-left: 5%;
    width: 80%;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.detail .short{
    color: #707070;
    font-size: 80%;
    padding-left: 5%;
}

.detail .price {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: red;
    font-size: 40rpx;
    padding-top: 2%;
    padding-left: 5%;
    padding-bottom: 1%;
    padding-right: 2%;
}
.line_flag {
    width: 80rpx;
    height: 1rpx;
    display: inline-block;
    margin: 20rpx auto;
    background-color: gainsboro;
    text-align: center;
}
.line {
    width: 100%;
    height: 2rpx;
    display: inline-block;
    margin: 20rpx 0rpx;
    background-color: gainsboro;
    text-align: center;
}
.detail-nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    float: left;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 1;
    width: 100%;
    height: 100rpx;
}
.button-green {
    background-color: #4caf50;
}
.button-red {
    background-color: #f44336;
}
.image_detail {
    width: 100%;
}
button {
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 30rpx;
    border-radius: 0rpx;
    width: 50%;
    height: 100%;
    line-height: 100rpx;
}
.detail-nav image {
    width: 90rpx;
    height: 50rpx;
    margin: 20rpx 40rpx;
}
.line_nav {
    width: 5rpx;
    height: 100%;
    background-color: gainsboro;
}
/* 占位 */
.temp {
    height: 100rpx;
}
text {
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}
.text-remark {
    display: block;
    font-size: 25rpx;
    margin: 10rpx;
}

/** 商品评价 */
.commodity_evalus{
    display: flex;
    flex-direction: column;
}

.commodity_judge{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: #dddddd solid 10rpx;
    background-color: white;
    padding-left: 5%;
    padding-top: 2%;
    padding-bottom: 2%;
    padding-right: 2%;
    position: relative;
}

.commodity_judge text{
    justify-content: flex-start;
}

.commodity_judge image{
    right: 2%;
    padding-top: 2%;
    position: absolute;
    width: 16px;
    height: 16px;
}

.evaluations{
    font-size: 80%;
    background-color: white;
    padding-left: 5%;
    padding-right: 2%;
    padding-bottom: 2%;
}

.evaluate{
    display: flex;
    flex-direction: column;
    padding-right: 2%;
}

.user_name{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.evalu_body{
    padding-left: 2%;
}

.evalu_title{
    font-size: 90%;
}

.evalu_content{
    font-size: 80%;
}

.evalu_pics{
    display: flex;
    flex-direction: row;
    padding-top: 2%;
}

.evalu_pic{
    padding-right: 3%;
}

.evalu_pic image{
    width: 100%;
    height: 100%;
}

/** 商品详情 */
.commodity_detail{
    border-top: #dddddd solid 10rpx;
    background-color: white;
    padding-left: 5%;
    padding-right: 5%;
}

.commodity_detail text{
    padding-top: 2%;
}

.commodity_price{
    padding-top: 1%;
    display: flex;
    padding-right: 2%;
    flex-direction: row;
    /*justify-content: space-between;*/
    justify-content: flex-start;
}

.commodity_price image{
    width: 30px;
    height: 30px;
}

/** 推荐系统模块显示 */
.commodity_recommend{
    height: 25%;
    width: 100%;
    border-top: #dddddd solid 1px;
    background-color: white;
    position: absolute;
}

.commodity_recommend text{
    padding-left: 5%;
}

.recommend_block{
    background-color: white;
    position: absolute;
    display: inline-block;
    overflow:scroll;
    width:100%;
    height:100%;
    white-space: nowrap;
}

.recommend_block .r_block{
    width: 60%;
    height: 100%;
}

.r_block image{
    width: 60%;
    height: 80%;
}

.r_block .tips_text{
    font-size: 70%;
    position: absolute;
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

.shop_level{
    display: flex;
    flex-direction: row;
}

.shop_level image{
    height: 25rpx;
    width: 25rpx;
}

/**    */
.recomms{
    border-top: #dddddd 15rpx solid;
    height: 30%;
    width: 100%;
}

.header{
    border: 1px solid white;
    border-bottom: #dddddd 1rpx solid;
    display: flex;
    justify-content: flex-start;
    padding-bottom: 10rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    padding-top: 10rpx;
}

.recomm_block{
    box-shadow:1px 1px 1px #dddddd;
    display: inline-block;
    overflow:scroll;
    width: 60%;
    height: 100%;
    padding-left: 2px;
    white-space:nowrap;
    position: relative;
}
