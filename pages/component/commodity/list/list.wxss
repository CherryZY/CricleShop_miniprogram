@import "../../../template/load/load.wxss";

/** 产品 */
.produce{
    padding-top: 5%;
    padding-bottom: 1%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.list{
    position:relative;
    height: 100%;
    width: 100%;
}

/** block排列 */
.comm_block{
    width: 360rpx;
    height: 400rpx;
    margin-top: 2%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.comm_block image{
    border-radius: 10px;
    width: 95%;
    height: 65%;
}

.down_block{
    padding-top: 1%;
    padding-right: 4%;
    font-size: 80%;
    height: 25%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.commName{
    font-size: 90%;
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/** list排列 */
.comm_list{
    height: 150px;
    width: 100%;
    margin-left: 5%;
    margin-right: 1%;
    margin-top: 2%;
}

.comm_list_b{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding-bottom: 1%;
    border-bottom: solid #dddddd 1px;
}

.comm_list_b image{
    width: 40%;
    height: 100%;
}

.right_list{
    height: 100%;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /*align-items: flex-start;*/
}

.right_top{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}


.shop_level{
    display: flex;
    flex-direction: row;
}

.shop_level image{
    height: 30rpx;
    width: 30rpx;
}

/** up block */
.upblock{
    position: fixed;
    z-index: 1;
    bottom: 10px;
    right: 8px;
    width: 40px;
    height: 40px;
}

.upblock_hide{
    display: none;
}

.upblock image{
    width: 100%;
    height: 100%;
}

/** category block */
.categoryblock{
    position: fixed;
    z-index: 1;
    bottom: 10px;
    left: 8px;
    width: 35px;
    height: 35px;
}

.categoryblock image{
    width: 100%;
    height: 100%;
}

/** 底部tip */
.bottom_tip{
    text-align: center;
    width: 100%;
    padding-bottom: 5px;
    padding-top: 30px;
    font-size: 80%;
    color: #707070;
    background-color: #dddddd;
}

.introduction{
    color: #707070;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
