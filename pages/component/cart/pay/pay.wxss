@import "../../../template/load/load.wxss";
page{
    height: 100%;
}
/** 总界面main */
.pay_main{
    position: relative;
    display: flex;
    flex-direction: column;
    border-bottom: #dddddd solid 500rpx;
}

/** 商品List */
.commodity_list{
    padding-left: 5%;
    padding-bottom: 3%;
    border-bottom: #dddddd solid 17rpx;
    position: relative;
}

.commodity{
    padding-top: 3%;
    padding-bottom: 2%;
    display: flex;
    flex-direction: row;
    position: relative;
    max-height: 200rpx;
    border-top: dotted  #dddddd 1px;
}

.commodity_icon image{
    float: left;
    height: 150rpx;
    width: 150rpx;
}

.commodity .commodity_info{
    position: absolute;
    display: flex;
    flex-direction: column;
    left: 25%;
    font-size: 80%;
}

.commodity_info text{
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: wrap;
    course:hand;
    width:180px;
}

.commodity .commodity_price_count{
    position: absolute;
    display: flex;
    flex-direction: column;
    right: 5%;
    text-align: right;
    padding-right: 5%;
    font-size: 80%;
}

.commodities_price{
    width: 100%;
    height: auto;
    padding-left: 5%;
}

.commodities_price_text{
    text-align: right;
    padding-right: 10%;
    padding-top: 2%;
    padding-bottom: 2%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 70%;
}

/** 地址 */
.address{
    padding-left: 5%;
    padding-bottom: 5%;
    padding-right: 5%;
    margin-top: 5%;
    border-bottom: #dddddd solid 17rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: relative;
}

.address image{
    width: 16px;
    height: 16px;
}

.address .arrow {
    position: absolute;
    right: 5%;
}

.trans_method_right{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.input_trans_address{
    padding-right: 5%;
    padding-left: 5%;
    padding-top: 3%;
    padding-bottom: 3%;
    border-bottom: #dddddd solid 17rpx;
    display: flex;
    flex-direction: row;
    position: relative;
}

.input_trans_address .arrow{
    position: absolute;
    right: 5%;
    width: 16px;
    height: 16px;
}

.input_trans_address .ico{
    padding-top: 3%;
    float: left;
    width: 16px;
    height: 16px;
}

.input_trans_address .recivAddress{
    position: absolute;
    left: 12%;
    bottom: 25%;
}

 .address .ico{
     position: absolute;
     left: 5%;
}

 .address .middle_info{
     font-size: 80%;
     padding-left:2%;
     display: flex;
     flex-direction: column;
}

 .trans{
     padding-left: 5%;
 }

 .invoice{
     border-bottom: #dddddd solid 17rpx;
     padding-left: 5%;
     padding-bottom: 3%;
     margin-top: 3%;
     padding-right: 5%;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
 }

 .trans_method{
     border-bottom: #dddddd solid 1px;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     padding-bottom: 3%;
     padding-top: 3%;
     padding-right: 5%;
 }

 .trans_extend{
    background-color: #8a8a8a;
    padding-left: 5%;
 }

 .trans_hide{
     display: none;
 }

/** 底部付款栏 */
.pay_main .pay_fix_bar{
    position: fixed;
    color: #09bb07;
    width: 100%;
    bottom: 0px;
}
